<div class="exterbal_transaction">
    <header>
        <div class="princ">
            <div>
                <ul>        
                    <li>
                        <%= link_to '', teachers_path, 
                        class: "glyphicon glyphicon-briefcase" %>
                    </li>
                    <li>
                        <%= link_to '', courses_path,
                        class: "glyphicon glyphicon-tasks" %>
                    </li>
                </ul>
            </div>
            <h1>External Teacher(s)</h1>
            <div><%= link_to '', logout_path, class: "glyphicon glyphicon-off" %></div>
        </div>
        <div class="order">
            <p>Most recent</p>
            <p>Most ancient</p>
        </div>
    </header>
    <section>
        <% @transactions.each do |trans| %>
            <% if trans.groups.size < 1%>
                <article>
                    <ul>
                        <li>Teacher's Name: <%= link_to trans.name, trans %></li>
                        <li>Time: <%= pluralize(trans.total, 'hour') %></li>
                        <li>Created on : <%= trans.created_at.strftime("%d/%m/%Y") %></li>
                    </ul>
                </article>
            <% end %>
        <% end %>
        <p id="back", class="btn btn-default"><%= link_to 'Back to profile', profile_path %></p>
    </section>
</div>