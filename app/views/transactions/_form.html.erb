
<header>
    <h2><%= link_to '' , transactions_path, class: "glyphicon glyphicon-arrow-left" %></h2>
    <h1><%= @user.name %></h1>
    <h2><%= link_to "Log Out", logout_path %></h2>
</header>
<%= form_for @transaction do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: 'Add new transaction'  %>
    <%= f.label :total %>
    <%= f.number_field :total %>
    <%= f.submit "Submit", class: "submit" %>
<% end %>
