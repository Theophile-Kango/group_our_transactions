<header>
    <div class="princ">
        <div>
            <ul>        
                <li>
                    <%= link_to '', teachers_path, 
                    class: "glyphicon glyphicon-briefcase" %>
                </li>
                <li>
                    <%= link_to '', external_teachers_path, 
                    class: "glyphicon glyphicon-sort-by-attributes-alt" %>
                </li>
                <li>
                    <%= link_to '', courses_path,
                    class: "glyphicon glyphicon-tasks" %>
                </li>
            </ul>
        </div>
        <h1><%= @user.name %></h1>
        <div><%= link_to '', logout_path, class: "glyphicon glyphicon-off" %></div>       
    </div>  
</header>
<ul class="alert-danger">
    <% @transaction.errors.full_messages.each do |error| %>
        <li class="alert"><%= error %></li>
    <% end %>
</ul>
    
<%= form_for @transaction do |f|%>
    <%= f.text_field :name, placeholder: 'The name of the teacher' %>
    <%= f.number_field :total, placeholder: 'Total hours' %>
    <%= f.submit "Submit", class: "submit" %>
    <%= link_to 'Back to profile', profile_path, class: 'btn btn-default' %>
<% end %>
