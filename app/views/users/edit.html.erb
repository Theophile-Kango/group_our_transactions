<div class="user_edit">
    <header>
        <h2><%= link_to '' , profile_path, class: "glyphicon glyphicon-arrow-left" %></h2>
        <h1>Edit Profile <%= @user.name %></h1>
        <h2><%= link_to "Log Out", logout_path %></h2>
    </header>
    <%= render 'layouts/header' %>
    <%= form_with(model: @user, local: true) do |f| %>
        <%= f.text_field :name %>
        <%= f.file_field :avatar, direct_upload: true %>
        <%= f.submit "Submit", class: "submit" %>
    <% end %>
</div>
